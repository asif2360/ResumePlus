<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/myToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarcolr"
        app:theme="@style/MyToolBarTheme" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutreferencename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColorHint="@color/toolbarcolr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewreference">

        <EditText
            android:id="@+id/editTextreferencename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            app:theme="@style/MyToolBarTheme"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textViewreference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/myToolBar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="Reference"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:typeface="serif" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutmobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/toolbarcolr"
        android:layout_alignEnd="@+id/textInputLayoutreferencename"
        android:layout_alignLeft="@+id/textInputLayoutreferencename"
        android:layout_alignRight="@+id/textInputLayoutreferencename"
        android:layout_alignStart="@+id/textInputLayoutreferencename"
        android:layout_below="@+id/textInputLayoutreferencename">

        <EditText
            android:id="@+id/editTextmobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Mob No"
            app:theme="@style/MyToolBarTheme"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/toolbarcolr"
        android:layout_alignEnd="@+id/textInputLayoutmobile"
        android:layout_alignLeft="@+id/textInputLayoutmobile"
        android:layout_alignRight="@+id/textInputLayoutmobile"
        android:layout_alignStart="@+id/textInputLayoutmobile"
        android:layout_below="@+id/textInputLayoutmobile">

        <EditText
            android:id="@+id/editTextemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            app:theme="@style/MyToolBarTheme"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textViewDeclaration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_skip"
        android:layout_alignStart="@+id/button_skip"
        android:layout_below="@+id/button_skip"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="Declaration"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textInputLayoutemail"
        android:layout_alignLeft="@+id/textViewDeclaration"
        android:layout_alignRight="@+id/textInputLayoutemail"
        android:layout_alignStart="@+id/textViewDeclaration"
        android:layout_below="@+id/textViewDeclaration"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:gravity="top|left"
        android:hint="Declare about Youself"
        android:ems="10"
        android:inputType="textPersonName|textMultiLine"
        android:lines="5"
        android:textColor="@color/tablayoutcolor"
        android:typeface="serif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    </LinearLayout>

    <Button
        android:id="@+id/button_pdf"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:background="#1fb350"
        android:fontFamily="serif"
        android:text="PROCEED"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/button_skip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/textInputLayoutemail"
        android:layout_alignLeft="@+id/textInputLayoutemail"
        android:layout_alignRight="@+id/textInputLayoutemail"
        android:layout_alignStart="@+id/textInputLayoutemail"
        android:layout_below="@+id/textInputLayoutemail"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:background="#f21111"
        android:fontFamily="serif"
        android:text="SKIP"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:typeface="serif" />

</RelativeLayout>
    </ScrollView>

