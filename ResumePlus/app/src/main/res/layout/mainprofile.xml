<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/myToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarcolr"
        app:theme="@style/MyToolBarTheme"/>

    <ImageView
        android:id="@+id/image_profileload"
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:layout_margin="20dp"
        android:background="#aca9a9"
        android:padding="5dp"
        android:layout_below="@+id/myToolBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image_profileload"
        android:layout_alignRight="@+id/textViewupload"
        android:layout_below="@+id/image_profileload"
        android:layout_marginTop="19dp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:text="Signature"
        android:background="#a61d1d"
        android:paddingBottom="4dp"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:typeface="normal" />

    <ImageView
        android:id="@+id/image_sign"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/signature"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/tapsignin" />

    <TextView
        android:id="@+id/objectiveness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image_sign"
        android:layout_alignRight="@+id/image_sign"

        android:layout_below="@+id/textView4"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:background="#66060b"
        android:fontFamily="serif"
        android:paddingBottom="4dp"
        android:text="Objective"
        android:textAlignment="center"
        android:textColor="@color/whitecolor"
        android:textSize="20sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#0dba5f"
        android:fontFamily="serif"
        android:text="NEXT"
        android:textColor="#000"
        android:textSize="22sp"
        android:typeface="sans"
        android:layout_below="@+id/editTextobjective"
        android:layout_alignLeft="@+id/objectiveness"
        android:layout_alignStart="@+id/objectiveness"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_alignRight="@+id/image_sign"
        android:layout_alignEnd="@+id/image_sign" />

    <EditText
        android:id="@+id/editTextobjective"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName|textMultiLine"
        android:lines="5"
        android:textColorHint="#baaeae"
        android:fitsSystemWindows="true"
        android:hint="Write  about your objective\n\nThis will help you to catch the attention of the Employer"
        android:gravity="top|left"
        android:layout_below="@+id/objectiveness"
        android:layout_alignLeft="@+id/objectiveness"
        android:layout_alignStart="@+id/objectiveness"
        android:layout_alignRight="@+id/next_button"
        android:layout_alignEnd="@+id/next_button" />

    <TextView
        android:id="@+id/textViewupload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:layout_alignBottom="@+id/image_profileload"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_toRightOf="@+id/image_profileload"
        android:background="#0a5613"
        android:fontFamily="serif"
        android:text="Upload Photo"
        android:textAlignment="center"
        android:textColor="@color/whitecolor"
        android:textSize="18sp"
        android:typeface="serif"
        android:layout_alignRight="@+id/image_sign"
        android:layout_alignEnd="@+id/image_sign" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image_sign"
        android:layout_alignLeft="@+id/objectiveness"
        android:layout_alignRight="@+id/image_sign"
        android:layout_alignStart="@+id/objectiveness"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/image_sign"
        android:fontFamily="serif"
        android:text="Upload Sign From File"
        android:paddingBottom="4dp"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:background="#070e5b"
        android:textSize="18sp"
        android:typeface="serif" />" />

</RelativeLayout>
    </ScrollView>