<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <TextView

        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="#141569"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="RESUME  TIPS"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:text="1. Include All Your Contact Information"
        android:textColor="@color/theme4"
        android:textSize="18sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:text="3. Describe About Yourself In Short By Choosing Familiar Words"
        android:textColor="@color/theme4"
        android:textSize="18sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView11"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:text="5. Tweak for Technoloy"
        android:textColor="@color/theme4"
        android:textSize="18sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView13"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:text="7. Write Custom Resume"
        android:textColor="@color/theme4"
        android:textSize="18sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:layout_margin="10dp"
        android:background="#d9d5d5"
        android:fontFamily="serif"
        android:text="8. Use Resume Templates or Design Your Own Template"
        android:textColor="#000"
        android:textSize="18sp"

        android:typeface="serif" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_margin="10dp"

        android:background="#d9d5d5"
        android:fontFamily="serif"
        android:text="6. Review Resume Samples"
        android:textColor="#000"
        android:textSize="18sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_margin="10dp"
        android:background="#d9d5d5"
        android:fontFamily="serif"
        android:text="4. Prioritize Your ResuMe Content"
        android:textColor="#000"
        android:textSize="18sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_margin="10dp"
        android:background="#d9d5d5"
        android:fontFamily="serif"
        android:text="2. Add A Profile or Objective"
        android:textColor="#000"
        android:textSize="18sp"
        android:typeface="serif" />

</RelativeLayout>
    </ScrollView>